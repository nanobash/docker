##############################################################################
#                 .env config file for docker-compose.yaml                   #
#                                                                            #
#                                  USAGE                                     #
#                           cp .env.example .env                             #
##############################################################################

# docker-compose service's IPV4 configuration
ADMINER_IPV4=192.168.100.10
MYSQL_PERCONA_IPV4=192.168.100.20
NGINX_IPV4=192.168.100.100
PHP_IPV4=192.168.100.99
POSTGRES_IPV4=192.168.100.30
SUBNET_IPV4=192.168.100.0/24

# Basic application configs
HOST_WWW_DIR=../www
HOST_DATA_DIR_PATH=../data

# Adminer service configuration
ADMINER_VERSION=4.6
ADMINER_HOST_PORT=8080

############################## Database services ##############################

# --- PostgreSQL --- #
POSTGRES_VERSION=12
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST_PORT=5432

# --- Percona --- #
MYSQL_ROOT_PASSWORD=root
MYSQL_USER=percona
MYSQL_PASSWORD=percona
MYSQL_DATABASE=percona
MYSQL_HOST_PORT=3306

# NGINX service configuration
NGINX_HOST_PORT=80

NGINX_DEFAULT=ssl.default.conf
NGINX_LARAVEL=ssl.laravel.conf
NGINX_SYMFONY=ssl.symfony.conf

# PHP service configuration
PHP_EXT_BCMATH=true
PHP_EXT_BZ2=true
PHP_EXT_CALENDAR=true
PHP_EXT_DBA=true
PHP_EXT_DOM=true
PHP_EXT_ENCHANT=true
PHP_EXT_EXIF=true
PHP_EXT_FILEINFO=true
PHP_EXT_GD=true
PHP_EXT_GETTEXT=true
PHP_EXT_GMP=true
PHP_EXT_IMAP=true
PHP_EXT_LDAP=true
PHP_EXT_MYSQLI=true
PHP_EXT_OPCACHE=true
PHP_EXT_PCNTL=true
PHP_EXT_PDO_DBLIB=true
PHP_EXT_PDO_MYSQL=true
PHP_EXT_PDO_ODBC=true
PHP_EXT_PDO_PGSQL=true
PHP_EXT_PGSQL=true
PHP_EXT_SHMOP=true
PHP_EXT_SNMP=true
PHP_EXT_SOAP=true
PHP_EXT_SOCKETS=true
PHP_EXT_SYSCMSG=true
PHP_EXT_SYSVSEM=true
PHP_EXT_SYSVSHM=true
PHP_EXT_TIDY=true
PHP_EXT_XDEBUG=true
PHP_EXT_XDEBUG_HOST=192.168.100.1
PHP_EXT_XDEBUG_PORT=9000
PHP_EXT_XMLRPC=true
PHP_EXT_XSL=true
PHP_EXT_ZIP=true
